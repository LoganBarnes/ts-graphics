// tsconfig.json
{
  "compilerOptions": {
    "target": "es5",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitReturns": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}
